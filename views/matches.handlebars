<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">

        </div>
        <div class="col-sm-8 text-left">
            <label for="searchBar">
                <input type="text" placeholder="Search.." id="searchBar">
            </label>
            <br>
            {{!-- Create a table --}}
            <table id="matches-table">

                {{!-- Header section --}}
                <thead>

                    {{!-- For just the first row, we print each key of the row object as a header cell so we
                    know what each column means when the page renders --}}
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Home Team</th>
                        <th>Home Team Score</th>
                        <th>Away Team</th>
                        <th>Away Team Score</th>
                        <th>Winning Team</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>
                    {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
                    {{#each data}}
                    <tr>
                        <td>{{this.matchID}}</td>
                        <td>{{this.matchDate}}</td>
                        <td>{{this.teamHome}}</td>
                        <td>{{this.teamHomeScore}}</td>
                        <td>{{this.teamAway}}</td>
                        <td>{{this.teamAwayScore}}</td>
                        <td>{{this.teamWon}}</td>
                        <td class="input-td"><input id="delete-data" type="submit" value="Delete"></td>
                        <td class="input-td">
                            <input id="update-data" type="submit" value="Update" data-toggle="modal"
                                data-target="#update-modal">
                            <div class="modal fade" id="update-modal" tabindex="-1" role="dialog"
                                aria-labelledby="update-modal" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="update-label">Update Match</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form id="add-match-formUpdated">
                                                <label for="input-matchDateUpdated">Match Date: </label>
                                                <br>
                                                <input type="date" name="input-matchDateUpdated" id="input-matchDateUpdated">
                                                <br>
                                                <label for="input-teamHomeUpdated">Home Team: </label>
                                                <br>
                                                <input type="text" name="input-teamHomeUpdated" id="input-teamHomeUpdated">
                                                <br>
                                                <label for="input-teamHomeScoreUpdated">Team Home Score: </label>
                                                <br>
                                                <input type="number" name="input-teamHomeScoreUpdated"
                                                    id="input-teamHomeScoreUpdated">
                                                <br>
                                                <label for="input-teamAwayUpdated">Away Team: </label>
                                                <br>
                                                <input type="text" name="input-teamAwayUpdated" id="input-teamAwayUpdated">
                                                <br>
                                                <label for="input-teamAwayScoreUpdated">Team Away Score: </label>
                                                <br>
                                                <input type="number" name="input-teamAwayScoreUpdated"
                                                    id="input-teamAwayScoreUpdated">
                                                <br>
                                                <label for="input-teamWonUpdated">Team Won: </label>
                                                <br>
                                                <input type="text" name="input-teamWonUpdated" id="input-teamWonUpdated">
                                                <br>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-sm-2 sidenav">
            {{!-- Form to add a record to the table --}}
            <label>
                <h2>Add a new Match</h2>
            </label>
            <form id="add-match-form">
                <label for="input-matchDate">Match Date: </label>
                <br>
                <input type="date" name="input-matchDate" id="input-matchDate">
                <br>
                <label for="input-teamHome">Home Team: </label>
                <br>
                <input type="text" name="input-teamHome" id="input-teamHome">
                <br>
                <label for="input-teamHomeScore">Team Home Score: </label>
                <br>
                <input type="number" name="input-teamHomeScore" id="input-teamHomeScore">
                <br>
                <label for="input-teamAway">Away Team: </label>
                <br>
                <input type="text" name="input-teamAway" id="input-teamAway">
                <br>
                <label for="input-teamAwayScore">Team Away Score: </label>
                <br>
                <input type="number" name="input-teamAwayScore" id="input-teamAwayScore">
                <br>
                <label for="input-teamWon">Team Won: </label>
                <br>
                <input type="text" name="input-teamWon" id="input-teamWon">
                <br>

                <input type="submit">
            </form>
        </div>
    </div>
</div>
<script src="./scripts/add_match.js"></script>