<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-8 text-left">
            {{!-- Create a table --}}
            <table>

                {{!-- Header section --}}
                <thead>

                    {{!-- For just the first row, we print each key of the row object as a header cell so we
                    know what each column means when the page renders --}}
                    <tr>
                        {{#each data.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>
                    {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
                    {{#each data}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.matchDate}}</td>
                        <td>{{this.teamHome}}</td>
                        <td>{{this.teamHomeScore}}</td>
                        <td>{{this.teamAway}}</td>
                        <td>{{this.teamAwayScore}}</td>
                        <td>{{this.teamWon}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-sm-2 sidenav">
            {{!-- Form to add a record to the table --}}
            <h2>Adding Data with AJAX</h2>
            <p>To add a new EPL Match, please enter their information below and click 'Submit'!</p>
            <form id="add-match-form">
                <label for="input-matchDate">Match Date: </label>
                <input type="date" name="input-matchDate" id="input-matchDate">

                <label for="input-teamHome">Home Team: </label>
                <input type="text" name="input-teamHome" id="input-teamHome">

                <label for="input-teamHomeScore">Team Home Score: </label>
                <input type="number" name="input-teamHomeScore" id="input-teamHomeScore">

                <label for="input-teamAway">Away Team: </label>
                <input type="text" name="input-teamAway" id="input-teamAway">

                <label for="input-teamAwayScore">Team Away Score: </label>
                <input type="number" name="input-teamAwayScore" id="input-teamAwayScore">

                <label for="input-teamWon">Team Won: </label>
                <input type="number" name="input-teamWon" id="input-teamWon">

                <input type="submit">
            </form>
        </div>
    </div>
</div>
