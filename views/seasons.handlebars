<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">

        </div>
        <div class="col-sm-8 text-left">
            {{!-- Create a table --}}
            <table>

                {{!-- Header section --}}
                <thead>

                    {{!-- For just the first row, we print each key of the row object as a header cell so we
                    know what each column means when the page renders --}}
                    <tr>
                        {{#each data.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>

                    {{!-- For each row, print the id, fname, lname, homeworld and age, in order --}}
                    {{#each data}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.fname}}</td>
                        <td>{{this.lname}}</td>
                        <td>{{this.homeworld}}</td>
                        <td>{{this.age}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-sm-2 sidenav">
            <div class="form-div">
            <h2>Add Team</h2>
            <p>To add a team, please enter information below and click 'Submit'!</p>
                <form action="">
                    <fieldset>
                    <legend>Insert Team Data</legend>
                        <div class="form-div">
                            <label>Team Name:</label>
                            <br>
                            <input type="text" name="team_name">
                        </div>
                        <div class="form-div">
                            <label>City:</label>
                            <br>
                            <input type="text" name="city">
                        </div>
                        <div class="form-div">
                            <label>Head Coach Last Name:</label>
                            <br>
                            <input type="text" name="coach_last_name">
                        </div>
                        <div class="form-div">
                            <label>Top Player ID:</label>
                            <br>
                            <input type="number" name="top_player_id">
                        </div>
                        <div class="form-div">
                            <input type="submit" value="Insert">
                        </div>
                    </fieldset>
                    
                </form>
            </div>
        </div>
    </div>
</div>