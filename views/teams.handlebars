<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">

        </div>
        <div class="col-sm-8 text-left">
            {{!-- Create a table --}}
            <table id="team-table">

                {{!-- Header section --}}
                <thead>

                    {{!-- For just the first row, we print each key of the row object as a header cell so we
                    know what each column means when the page renders --}}
                    <tr>
                        {{#each data.[0]}}
                        <th>
                            {{@key}}
                        </th>
                        {{/each}}
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>

                    {{!-- For each row --}}
                    {{#each data}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.teamName}}</td>
                        <td>{{this.city}}</td>
                        <td>{{this.headCoachLname}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-sm-2 sidenav">
            {{!-- Form to add a record to the table --}}
            <h2>Add a new EPL team</h2>
            <p>To add a new EPL team, please enter their information below and click 'Submit'!</p>
            <form id="add-team-form">
                <label for="input-teamName">Team Name: </label>
                <input type="text" name="input-teamName" id="input-teamName">

                <label for="input-city">City: </label>
                <input type="text" name="input-city" id="input-city">

                <label for="input-headCoachLname">Head Coach Last Name: </label>
                <input type="text" name="input-headCoachLname" id="input-headCoachLname">

                <input type="submit">
            </form>
        </div>
    </div>
</div>
