<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">

        </div>
        <div class="col-sm-8 text-left">
            {{!-- Create a table --}}
            <table id="team-table">

                {{!-- Header section --}}
                <thead>

                    {{!-- For just the first row, we print each key of the row object as a header cell so we
                    know what each column means when the page renders --}}
                    <tr>
                      <th>ID</th>
		      <th>Team Name</th>
                      <th>City</th>
                      <th>Head Coach</th>
		      <th></th>
		      <th></th>
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>

                    {{!-- For each row --}}
                    {{#each data}}
                    <tr>
			<td>{{this.id}}</td>
                        <td>{{this.teamName}}</td>
                        <td>{{this.city}}</td>
                        <td>{{this.headCoachLname}}</td>
			<td><input id="delete-data" type="submit" value="Delete"></td>
			<td><input id="update-data" type="submit" value="Update"></td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-sm-2 sidenav">
            {{!-- Form to add a record to the table --}}
            <label>
		<h2>Add a new EPL team</h2>
	    </label>
            <form id="add-team-form">
                <label for="input-teamName">Team Name: </label>
		<br>
                <input type="text" name="input-teamName" id="input-teamName">
		<br>
                <label for="input-city">City: </label>
		<br>
                <input type="text" name="input-city" id="input-city">
		<br>
                <label for="input-headCoachLname">Head Coach Last Name: </label>
		<br>
                <input type="text" name="input-headCoachLname" id="input-headCoachLname">
		<br>
                <input type="submit" class="submit-btn">
            </form>
        </div>
    </div>
</div>
<script src="./scripts/add_team.js"></script>