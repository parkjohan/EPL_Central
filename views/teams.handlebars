<div class="container-fluid text-center">
    <div class="row content">
        <div class="col-sm-2 sidenav">

        </div>
        <div class="col-sm-8 text-left">
            <label for="searchBar">
                <input type="text" placeholder="Search.." id="searchBar">
            </label>
            <br>
            {{!-- Create a table --}}
            <table id="team-table">

                {{!-- Header section --}}
                <thead>

                    {{!-- For just the first row, we print each key of the row object as a header cell so we
                    know what each column means when the page renders --}}
                    <tr>
                        <th>ID</th>
                        <th>Team Name</th>
                        <th>City</th>
                        <th>Head Coach</th>
                        <th></th>
                        <th></th>
                    </tr>
                </thead>

                {{!-- Body section --}}
                <tbody>
                    {{!-- For each row --}}
                    {{#each data}}
                    <tr>
                        <td id="team-ID">{{this.teamID}}</td>
                        <td>{{this.teamName}}</td>
                        <td>{{this.city}}</td>
                        <td>{{this.headCoachLname}}</td>
                        <td class="input-td"><input id="delete-data" type="submit" value="Delete"></td>
                        <td class="input-td">
                            <input id="update-data" type="submit" value="Update" data-toggle="modal"
                                data-target="#update-modal">
                            <div class="modal fade" id="update-modal" tabindex="-1" role="dialog"
                                aria-labelledby="update-modal" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="update-label">Update Team</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form id="update-team-form">
                                                <label for="input-teamNameUpdated">Team Name: </label>
                                                <br>
                                                <input type="text" name="input-teamNameUpdated" id="input-teamNameUpdated">
                                                <br>
                                                <label for="input-cityUpdated">City: </label>
                                                <br>
                                                <input type="text" name="input-cityUpdated" id="input-cityUpdated">
                                                <br>
                                                <label for="input-headCoachLnameUpdated">Head Coach Last Name: </label>
                                                <br>
                                                <input type="text" name="input-headCoachLnameUpdated"
                                                    id="input-headCoachLnameUpdated">
                                                <br>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                            <button type="button" class="btn btn-primary" id="update-team-btn" data-dismiss="modal">Update</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col-sm-2 sidenav">
            {{!-- Form to add a record to the table --}}
            <label>
                <h2>Add a new EPL team</h2>
            </label>
            <form id="add-team-form">
                <label for="input-teamName">Team Name: </label>
                <br>
                <input type="text" name="input-teamName" id="input-teamName">
                <br>
                <label for="input-city">City: </label>
                <br>
                <input type="text" name="input-city" id="input-city">
                <br>
                <label for="input-headCoachLname">Head Coach Last Name: </label>
                <br>
                <input type="text" name="input-headCoachLname" id="input-headCoachLname">
                <br>
                <input type="submit" class="submit-btn">
            </form>
        </div>
    </div>
</div>
